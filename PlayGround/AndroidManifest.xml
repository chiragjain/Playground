<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.learn.playground"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Permission for OCR -->
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:name="android.hardware.camera.flash"
        android:required="false" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.screen.landscape" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.learn.playground.SplashActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoTitle" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.learn.playground.CountryListSample"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.learn.playground.CountryList"
            android:label="@string/title_activity_country_list" >
        </activity>
        <activity
            android:name="com.learn.playground.PlayZone"
            android:label="@string/title_activity_play_zone" >
        </activity>
        <activity
            android:name="com.learn.playground.ParticleAnimationSample"
            android:label="@string/title_particle_animation_test" >
        </activity>
        <activity
            android:name="com.learn.playground.PaintViewSample"
            android:label="@string/title_activity_paint_view" >
        </activity>       
        <activity
            android:name="com.learn.playground.Box2DViewSample"
            android:label="@string/title_activity_box2d_view"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>